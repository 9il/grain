{
    "name": "grain",
    "authors": [
        "karita"
    ],
    "dependencies": {
        "derelict-cuda": "~>3.1.1",
        "numir": "~>0.1.4",
        "lubeck": "~>0.0.5"
    },
    "targetType": "library",
    "dflags-ldc": ["-relocation-model=pic"],
    "libs": ["openblas"],
    "sourceFiles": ["libhdf5.a"],
    "preBuildCommands": ["make --silent install-hdf5"],
    "buildTypes": {
        "cuda-unittest": {
            "buildOptions": ["unittests", "debugMode", "debugInfo"],
            "versions": ["grain_cuda"],
            "preBuildCommands": ["make --silent cuda-deps"],
            "libs": ["cublas"]
        },
        "cuda-unittest-cov": {
            "buildOptions": ["unittests", "coverage", "debugMode", "debugInfo"],
            "versions": ["grain_cuda"],
            "preBuildCommands": ["make --silent cuda-deps"],
            "libs": ["cublas"]
        },
        "cuda-unittest-release": {
            "buildOptions": ["unittests", "releaseMode", "optimize", "inline", "noBoundsCheck", "debugInfo"],
            "preBuildCommands": ["make --silent cuda-deps"],
            "versions": ["grain_cuda"],
            "libs": ["cublas"]
        },
        "unittest": {
            "buildOptions": ["unittests", "debugMode", "debugInfo"],
        },
        "unittest-cov": {
            "buildOptions": ["unittests", "coverage", "debugMode", "debugInfo"],
        },
        "unittest-release": {
            "buildOptions": ["unittests", "releaseMode", "optimize", "inline", "noBoundsCheck", "debugInfo"],
        },
        "cuda-release": {
            "buildOptions":  ["releaseMode", "inline", "noBoundsCheck"],
            "versions": ["grain_cuda"],
            "preBuildCommands": ["make --silent cuda-deps"],
            "libs": ["cublas"]
        }
    },
    "configurations": [
        {
            "name": "library",
            "targetType": "library"
        },
        {
            "name": "sourceLibrary",
            "targetType": "sourceLibrary"
        },
        {
            "name": "example-mnist",
            "targetName": "grain-example-mnist",
            "targetType": "executable",
            "mainSourceFile": "example/mnist.d",
            "dependencies": {
                "snck": "~>0.0.4"
            }
        },
        {
            "name": "example-char-rnn",
            "targetName": "grain-example-char-rnn",
            "targetType": "executable",
            "mainSourceFile": "example/char_rnn.d",
        },
        {
            "name": "example-char-rnn-hand",
            "targetName": "grain-example-char-rnn-hand",
            "targetType": "executable",
            "mainSourceFile": "example/char_rnn_hand.d",
        }
    ],
    "-ddoxTool": "scod",
    "-ddoxFilterArgs": [
        "--ex", "mir.",
        "--ex", "derelict.",
        "--unittest-examples"
    ],
    "description": "CUDA library for D",
    "copyright": "Copyright Â© 2018, karita",
    "license": "BSL-1.0"
}
