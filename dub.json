{
    "name": "grain",
    "authors": [
        "karita"
    ],
    "dependencies": {
        "derelict-cuda": "~>3.1.1",
        "derelict-cl": "~>3.2.0",
        "numir": "~>0.1.2",
        "lubeck": "~>0.0.5"
    },
    "targetType": "library",
    "libs": ["openblas"],
    "buildTypes": {
        "cuda-unittest": {
            "buildOptions": ["unittests", "debugMode", "debugInfo"],
            "versions": ["grain_cuda"],
            "preBuildCommands": ["make --silent cuda-deps"],
            "libs": ["cublas"]
        },
        "cuda-unittest-cov": {
            "buildOptions": ["unittests", "coverage", "debugMode", "debugInfo"],
            "versions": ["grain_cuda"],
            "preBuildCommands": ["make --silent cuda-deps"],
            "libs": ["cublas"]
        },
        "cuda-unittest-release": {
            "buildOptions": ["unittests", "releaseMode", "optimize", "inline", "noBoundsCheck", "debugInfo"],
            "preBuildCommands": ["make --silent cuda-deps"],
            "versions": ["grain_cuda"],
            "libs": ["cublas"]
        },
        "unittest": {
            "buildOptions": ["unittests", "debugMode", "debugInfo"],
        },
        "unittest-cov": {
            "buildOptions": ["unittests", "coverage", "debugMode", "debugInfo"],
        },
        "unittest-release": {
            "buildOptions": ["unittests", "releaseMode", "optimize", "inline", "noBoundsCheck", "debugInfo"],
        },
        "cuda-release": {
            "buildOptions":  ["releaseMode", "inline"],
            "versions": ["grain_cuda"],
            "preBuildCommands": ["make --silent cuda-deps"],
            "libs": ["cublas"]
        }
    },
    "configurations": [
        {
	        "name": "library",
	        "targetType": "library"
	    },
	    {
	        "name": "sourceLibrary",
	        "targetType": "sourceLibrary"
        },
        {
            "name": "example-mnist",
            "targetName": "grain-example-mnist",
            "targetType": "executable",
            "mainSourceFile": "example/mnist.d",
        }
    ],
    "-ddoxTool": "scod",
    "-ddoxFilterArgs": [
        "--ex", "mir.",
        "--ex", "derelict.",
        "--unittest-examples"
    ],
    "description": "CUDA library for D",
    "copyright": "Copyright Â© 2018, karita",
    "license": "BSL-1.0"
}
